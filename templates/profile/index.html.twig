{% extends '_template.html.twig' %}

{% block title %}
    Profil
{% endblock %}

{% block content %}
<section class="section">
    <div class="columns">
        <div class="column is-two-fifth">
            <h1 class"title">Modifier votre profil</h1>

            {% include 'includes/flash.html.twig' %}
            
                {{ form_start(profile_form) }}

                {{ form_row(profile_form.email, {label: "Adresse email:"}) }}
                {{ form_row(profile_form.pseudo, {label: "Pseudo:"}) }}

                <button type="submit" class="button is-primary is-fullwidth">Mettre à jour</button>
        </div>
        <hr style="width:2px; height:220px; color:grey"/>
        <div class="column is-two-fifth">
            <h2 class"title">Modifier votre mot de passe</h2>

            {% include 'includes/flash.html.twig' %}

                {{ form_row(profile_form.plainPassword.first, {label: "Mot de passe:"}) }}
                {{ form_row(profile_form.plainPassword.second, {label: "Confirmer le mot de passe:"}) }}  

                <button type="submit" class="button is-primary is-fullwidth">Mettre à jour</button>

                {{ form_end(profile_form) }}
        </div>
    </div>
</div>
    
{% endblock %}
